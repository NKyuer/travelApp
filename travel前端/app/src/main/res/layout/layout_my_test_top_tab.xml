<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="5dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/bottomTab_home"
        android:src="@drawable/tab_home_default"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="30dp" />
    <ImageView
        android:id="@+id/bottomTab_people"
        android:src="@drawable/tab_people_default"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="30dp" />
    <ImageView
        android:id="@+id/bottomTab_bell"
        android:src="@drawable/tab_bell_default"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="30dp" />
    <ImageView
        android:id="@+id/bottomTab_person"
        android:src="@drawable/tab_person_default"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#000000" />-->

</LinearLayout>
