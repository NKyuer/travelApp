<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wholeLayout"
    tools:context="com.example.daath.travelApp.SelectPictureActivity">

    <LinearLayout
        android:background="@color/childLayout"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selectPicture_backArrow"
            android:src="@drawable/back_arrow_image"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:text="选择"
            android:textSize="22sp"
            android:textColor="#4e4e4e"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/selectPicture_dialogLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#66a0bb"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/selectPicture_takePhoto"
            android:text="拍照"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@drawable/select_picture_button_background"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/selectPicture_pickPhoto"
            android:text="从相册选择"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@drawable/select_picture_button_background"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/selectPicture_cancel"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@drawable/select_picture_button_background"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>
