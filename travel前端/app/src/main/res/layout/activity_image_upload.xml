<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wholeLayout"
    tools:context="com.example.daath.travelApp.ImageUploadActivity"
    android:orientation="vertical">


    <LinearLayout
        android:background="@color/childLayout"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageUpload_backArrow"
            android:src="@drawable/back_arrow_image"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:text="上传头像"
            android:textSize="22sp"
            android:textColor="#4e4e4e"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageUpload_display"
        android:background="#fff"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_height="180dp" />


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/imageUpload_upload"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/button_round_corner"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
